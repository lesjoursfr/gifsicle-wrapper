{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		/* Visit https://aka.ms/tsconfig.json to read more about this file */
		"outDir": "lib",
		"rootDir": "src",
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "lib"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}