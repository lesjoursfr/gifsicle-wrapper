{
	"name": "gifsicle-wrapper",
	"version": "3.0.0",
	"description": "Wrapper for Gifsicle",
	"license": "MIT",
	"repository": "lesjoursfr/gifsicle-wrapper",
	"homepage": "https://github.com/lesjoursfr/gifsicle-wrapper#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/gifsicle-wrapper/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "18.x || 20.x"
	},
	"exports": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm -r .yarn/cache/ && rm yarn.lock && yarn",
		"check-lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write .",
		"build": "tsc",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' ava"
	},
	"keywords": [
		"gif",
		"gifsicle",
		"image",
		"img",
		"compress",
		"resize",
		"minify",
		"optimize"
	],
	"type": "module",
	"dependencies": {
		"execa": "^7.2.0",
		"gifsicle": "^7.0.1",
		"image-size": "^1.0.2"
	},
	"devDependencies": {
		"@tsconfig/node18": "^18.2.0",
		"@types/gifsicle": "^5.2.0",
		"@typescript-eslint/eslint-plugin": "^6.2.1",
		"@typescript-eslint/parser": "^6.2.1",
		"ava": "^5.3.1",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^8.9.0",
		"prettier": "^3.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"packageManager": "yarn@3.6.1"
}
